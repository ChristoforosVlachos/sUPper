<!DOCTYPE html>
<html>
    <head>
        <title>Σελίδα Διανομέα</title> 
        <link rel="stylesheet" href="css/delivery_page_style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body style="font-size: 1.2em;">
        <form action="/driver" method="post">
        <div class="container">
            <div class="row top-bar mb-5" id="bar">
                <div class="col-auto">
                    <a href="/"><img class="logo" src="img/logo.png" alt="logo"></a>
                </div>
                <div class="col"></div>
                <div class="col-auto">
                    <input type="button" class="signout" value="Αποσύνδεση" onclick="window.location='/signout'">
                </div>
            </div>
            <div class="mt-5 row justify-content-center">

            <!-- Αρχικη σελ -->
                {{#if page1}}
                <div id="first_page" class="mt-5 col-6 d-flex flex-column align-items-center">
                    <h1 class="mb-3">Καλωσόρισες</h1>
                    <h3 class="mb-4">Δώσε τον Ταχυδρομικό Κώδικα σου</h3>
                    <input type="text" name="zip" value="{{info.tk}}">
                    <input type="submit" id="beginbtn" class="mt-4" value="Ξεκίνα!">
                </div>
                {{/if}}
            <!-- Αναμονη για παραγγελια -->
                {{#if page2}}
                <div id="second_page" class="mt-5 col-6 d-flex flex-column align-items-center">
                    <h1>Αναμονή Για Παραγγελία</h1>
                    <div class="snippet" data-title=".dot-flashing">
                        <div class="stage">
                          <div class="dot-flashing"></div>
                        </div>
                      </div>
                </div>
                {{/if}}
            <!-- Απορριψη/Αποδοχη -->
                {{#if page3}}
                <div id="third_page" class="mt-5 col-10">
                    <div id="info" class="row">
                        <div class="col-6">
                            <p id="orderId" style="display: none;">{{order.order_id}}</p>
                            <p class="info fw-bold">Στοιχεία μαγαζιού</p>
                            <p>{{order.rname}}</p>
                            <p>{{order.rstreet}} {{order.rstreetno}}, {{order.rcity}}</p>
                        </div>
                        <div class="col-6">
                            <p class="info fw-bold">Στοιχεία παραγγελίας</p>
                            <p>{{order.ostreet}}</p>
                            <p>{{order.ocost}}€</p>
                        </div>
                    </div>
                    <div id="buttons" class="row">
                        <div class="col-6 mt-4 mb-4 d-flex justify-content-end">
                            <button type="button" onclick="location.reload()">Απόρριψη</button>
                        </div>
                        <div class="col-6 mt-4 mb-4">
                            <button type="button" id="acceptOrder">Αποδοχή</button>
                        </div>
                    </div>
                </div>
                <script src="js/delivery_page3.js"></script>
                {{/if}}
            <!-- Παράδοση/Ολοκλήρωση -->
                {{#if page4}}
                <div id="fourth_page" class="mt-5 mb-5 col-10">
                    <div id="info" class="row">
                        <div class="col-6">
                            <p id="orderId" style="display: none;">{{order.order_id}}</p>
                            <p class="info fw-bold mt-1">Στοιχεία μαγαζιού</p>
                            <p>{{order.company_name}}</p>
                            <p>{{order.rstreet}} {{order.rstreetno}}, {{order.city}}</p>
                        </div>
                        <div class="col-6">
                            <p class="info fw-bold mt-1">Διεύθυνση Παράδοσης</p>
                            <p>{{order.ostreet}}</p>
                            <p>Όροφος: {{order.floor_number}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <p class="info fw-bold text-center mt-1">Στοιχεία παραγγελίας</p>
                        </div>
                    </div>
                    <div id="addinfo" class="row">
                        <div class="col-6">
                            <p>{{order.customer_name}}</p>
                            <p>{{order.cost}}€</p>
                        </div>
                        <div class="col-6">
                            <p>{{order.customer_phone}}</p>
                            <p>{{order.notes}}</p>
                        </div>
                    </div>
                    <div id="doneDiv" class="row">
                        <div class="col-12 mt-4 mb-4 d-flex justify-content-center">
                            <button type="button" id="doneBtn">Ολοκλήρωση</button>
                        </div>
                    </div>
                </div>
                <script src="js/delivery_page4.js"></script>
                {{/if}}
            </div>
        </div>
        </form>
    </body>
</html> 
