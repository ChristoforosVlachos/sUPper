<html>
    <head>
        <title>Επισκόπηση Παραγγελίας</title>
        <link rel="stylesheet" href="css/order_overview_style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <div class="row top-bar mb-5" id="bar">
                <div class="col-auto">
                    <a href="/"><img class="logo" src="img/logo.png" alt="logo"></a>
                </div>
                <div class="col"></div>
                <div class="col-auto">
                    {{#if username}}
                    {{!-- <p style="font-size: 2rem; color: white">{{username}}</p> --}}
                    <input type="button" class="signout" value="Αποσύνδεση" onclick="window.location='/signout'">
                    {{else}}
                    <input type="button" class="login" value="Σύνδεση / Εγγραφή" onclick="location.href='/login'">
                    {{/if}}
                </div>
            </div>
            <div class="row pt-2 ps-2 pe-2 pb-2" id="overview">
                <form class="col" method="post">
                    <div class="row">
                        <h4 class="fw-bold">Στοιχεία Παραγγελίας</h4>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <input type="text" class="form-control" name="name" placeholder="Όνομα" value="">
                        </div>
                        <div class="col-6">
                            <input type="phone" class="form-control" name="phone" placeholder="Τηλέφωνο" value="{{info.tel}}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <input type="text" class="form-control" name="address" placeholder="Διεύθυνση" value="">
                        </div>
                        <div class="col-6">
                            <input type="text" class="form-control" name="floor" placeholder="Όροφος" value="">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <ul>
                                {{#each food}}
                                <li>{{this.quantity}} x {{this.name}}<br>Συνολικά: {{this.total}}€</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <textarea class="form-control" name="comments" placeholder="Σχόλια"></textarea>
                        </div>
                        <input type="text" name="restaurant_id" value="{{restaurant_id}}" style="display: none;">
                        <div class="col-6 d-flex justify-content-center align-items-center"> 
                            <input type="submit" value="Επιβεβαίωση Παραγγελίας" class="button">
                        </div>
                    </div> 
                </form>
            </div>
        </div>
    </body>
</html>